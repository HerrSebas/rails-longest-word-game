<div class = "container">
  <div class="game-container">
    <h1>New game</h1>

    <div class = "form-game-top">
        <% @letters.each do |letter|%>
        <div class = "letter-box">
          <p><%= letter %></p>
        </div>
        <% end %>
    </div>

    <h2>What is the longest word you can find?</h2>

    <div class = "form-game-bottom">
      <form action="/score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :grid, @letters %>
        <label for="fname">
          <h2>Your word</h2>
        </label><br>
        <input type="text" name="attempt"><br>
        <button type="submit" class="btn btn-primary">Go!</button>
      </form>
    </div>
  </div>
</div>
